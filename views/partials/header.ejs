<!-- This is a boostrap navigation bar -->
<!-- It includes a logo, nav buttons (for creating a new pin), and a hamburger menu button for when on mobile -->
<nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="../../images/logo.png" height="75" alt="">
        </a>

        

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <% if (locals.user) { %>
                <li class="nav-item">
                  <a class="nav-link" href="/pin">New<span class="bi bi-pin-angle"></span></a>
                </li>
                <span class="navbar-text">
                  <%= locals.user.username %>
                </span>
                <li class="nav-item">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              <% } else { %>
                <li class="nav-item">
                  <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/register">Register</a>
                </li>
              <% } %>
            </ul>
        </div>
    </div>
</nav>