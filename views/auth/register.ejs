<%- include('../partials/head.ejs', {page: "Create new Pin" }) %>
<%- include('../partials/header.ejs') %>

<div class="container px-4">
    <div class="row gx-5">
        <div class="col-4">
            <!-- Display an error message if there was an issue registering the user after submitting the form -->
            <% if (errorMessage) { %>
                <div class="alert alert-danger" role="alert">
                    <%= errorMessage %> 
                  </div>
            <% } %>
            <!-- Create a form to take information and pass it to the pin create POST route -->
            <form action="/register" method="POST">
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input name="username" type="text" class="form-control" id="username">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" id="password">
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>

